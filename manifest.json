{
    "manifest_version": 2,
    "app": {
        "background": {
            "scripts": ["static/js/btchip-js-api/api/winusbDevice.js",
                        "background.js"]
        }
    },
    "sandbox": {
        "pages": ["bip38_sandbox.html"]
    },
    "permissions": [
        "storage",
        "videoCapture",
        "usb",
        {"usbDevices": [
            {"vendorId": 9601,
             "productId": 7036}
        ]}
    ],
    "sockets": {
        "tcp":  {"connect": "*:50001"}
    },
    "icons": { "16": "icon16.png",
               "48": "icon48.png",
              "128": "icon128.png" },
    "name": "GreenAddress.it",
    "version": "0.0.40"
}
